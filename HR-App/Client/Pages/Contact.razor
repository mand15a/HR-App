@page "/contact"

<h3>Contact Us</h3>

<form>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" @bind="name">
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" @bind="email">
    </div>

    <div class="form-group">
        <label for="message">Message</label>
        <textarea class="form-control" id="message" @bind="message"></textarea>
    </div>

    <button type="submit" class="btn btn-primary" @onclick="SubmitContact">Submit</button>
</form>

